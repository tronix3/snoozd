{
	"name": "Snoozd",
	"short_name": "Snoozd",
	"description": "Free up your resources by snoozing tabs and windows until you need them.",
	"version": "1.0.0",

	"icons": {
		"128": "icons/ext-icon-128.png",
		"48": "icons/ext-icon-48.png",
		"32": "icons/ext-icon-32.png",
		"16": "icons/ext-icon-16.png"
	},
	"manifest_version": 3,

	"action": {
		"default_popup": "html/popup.html"
	},
	"author": "Tronix3",
	"options_ui": {
		"page": "html/settings.html",
		"open_in_tab": true
	},

	"background": {
		"service_worker": "scripts/sw.js"
	},

	"permissions": ["alarms", "contextMenus", "idle", "notifications", "storage", "tabs"],

	"web_accessible_resources": [{
		"resources": ["html/settings.html"],
		"matches": ["https://*.snoozd.xyz/*"]
	}],

	"content_scripts": [{
		"matches": ["https://*.snoozd.xyz/*"],
		"js": ["scripts/snoozd.xyz.js"]
	}],

	"commands": {
		"nap-room": {
			"description": "Show me snoozing tabs"
		},
		"startup": {
			"description": "Snooze until the next time you launch your browser"
		},
		"in-an-hour": {
			"description": "Snooze for 1 hour"
		},
		"today-morning": {
			"description": "Snooze until today morning"
		},
		"today-evening": {
			"description": "Snooze until today evening"
		},
		"tom-morning": {
			"description": "Snooze until tomorrow morning"
		},
		"tom-evening": {
			"description": "Snooze until tomorrow evening"
		},
		"weekend": {
			"description": "Snooze until this Saturday"
		},
		"monday": {
			"description": "Snooze until Monday"
		},
		"week": {
			"description": "Snooze until 1 week from now"
		},
		"month": {
			"description": "Snooze until 1 month from now"
		}
	}
}